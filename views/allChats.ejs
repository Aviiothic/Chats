<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Chats</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #97d2ef;
            text-align: center;
            margin: 0;
            padding: 20px;
        }
        .chat-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 15px;
        }
        .chat-card {
            width: 300px;
            background: linear-gradient(135deg, #ff9a9e, #fad0c4);
            color: #333;
            padding: 15px;
            border-radius: 10px;
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
            text-align: left;
            position: relative;
        }
        .chat-header {
            font-weight: bold;
            font-size: 16px;
            color: #fff;
            background: rgba(0, 0, 0, 0.6);
            padding: 5px 10px;
            border-radius: 8px 8px 0 0;
        }
        .chat-message {
            font-size: 14px;
            margin: 10px 0;
            padding: 10px;
            background: rgba(255, 255, 255, 0.8);
            border-radius: 5px;
        }
        .chat-footer {
            font-size: 12px;
            color: #fff;
            text-align: right;
            padding: 5px 10px;
            background: rgba(0, 0, 0, 0.6);
            border-radius: 0 0 8px 8px;
        }
    </style>
</head>
<body>
    <h2>All Chats</h2>
    <div class="chat-container">
        <% chats.forEach(chat => { %>
            <div class="chat-card">
                <div class="chat-header">
                    <%= chat.sender %> - <%= new Date(chat.createdAt).toLocaleString() %>
                </div>
                <div class="chat-message">
                    <%= chat.message %>
                </div>
                <div class="chat-footer">
                    To: <%= chat.receiver %>
                </div>
            </div>
            <form method="get" action="/chats/<%= chat._id %>/edit">
                <input type="hidden" name="_id" value="<%= chat._id %>">
                <button>Edit</button>
            </form>
            
        <% }) %>
    </div>
</body>
</html>
