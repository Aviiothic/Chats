<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Chats</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f3f4f6;
            text-align: center;
            margin: 0;
            padding: 20px;
        }
        h2 {
            color: #333;
        }
        .chat-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 15px;
        }
        .chat-card {
            width: 320px;
            background: #fff;
            border-radius: 12px;
            box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            text-align: left;
            padding: 15px;
            transition: transform 0.2s ease-in-out;
        }
        .chat-card:hover {
            transform: translateY(-5px);
        }
        .chat-header, .chat-footer {
            background: linear-gradient(135deg, #6a11cb, #2575fc);
            color: #fff;
            padding: 8px 12px;
            font-size: 15px;
            font-weight: bold;
            border-radius: 8px 8px 0 0;
        }
        .chat-footer {
            border-radius: 0 0 8px 8px;
            font-size: 14px;
            font-weight: normal;
            text-align: left;
        }
        .chat-message {
            font-size: 14px;
            margin: 10px 0;
            padding: 12px;
            background: rgba(0, 0, 0, 0.05);
            border-radius: 6px;
            word-wrap: break-word;
        }
        .chat-actions {
            display: flex;
            justify-content: space-between;
            padding-top: 10px;
        }
        .chat-actions form {
            margin: 0;
        }
        button {
            background: #ff5a5f;
            color: white;
            border: none;
            padding: 8px 12px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 14px;
            transition: background 0.2s ease-in-out;
        }
        button:hover {
            background: #e0484d;
        }
        .edit-btn {
            background: #34c759;
        }
        .edit-btn:hover {
            background: #2aa44d;
        }
    </style>
</head>
<body>
    <h2>All Chats</h2>
    <div class="chat-container">
        <% chats.forEach(chat => { %>
            <div class="chat-card">
                <div class="chat-header">
                    <%= chat.sender %> - <%= new Date(chat.createdAt).toLocaleString() %>
                </div>
                <div class="chat-message">
                    <%= chat.message %>
                </div>
                <div class="chat-footer">
                    To: <%= chat.receiver %>
                </div>
                <div class="chat-actions">
                    <form method="get" action="/chats/<%= chat._id %>/edit">
                        <button class="edit-btn">Edit</button>
                    </form>
                    <form method="POST" action="/chats/<%= chat._id %>?_method=DELETE">
                        <button>Delete</button>
                    </form>
                </div>
            </div>
        <% }) %>
    </div>
</body>
</html>
